#!/bin/bash

#------------------------------------------------------------------------------
# Defines:
#------------------------------------------------------------------------------

CONTAINER_HOME='/home/marc/docker'

#------------------------------------------------------------------------------
# Define start and stop functions:
#------------------------------------------------------------------------------

function container_start {
  /home/marc/docker/docker-${1}/bin/container start
}

function container_stop {
  /home/marc/docker/docker-${1:0:-2}/bin/container stop $1
}

#------------------------------------------------------------------------------
# Entry point:
#------------------------------------------------------------------------------

[ $# -ne 2 ] && echo "Usage: $0 [start role] | [stop name]" && exit 1
case $1 in start|stop) container_$1 $2 ;; esac
